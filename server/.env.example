# US Payroll System - Environment Configuration Example
# Copy this file to .env and update the values

# Database - SQLite for development
DATABASE_URL="file:./dev.db"

# Server
PORT=3001
NODE_ENV=development  # Set to 'production' in production

# Authentication
# SECURITY: Set to true in production (this is also the default if not set)
# Authentication cannot be disabled when NODE_ENV=production
REQUIRE_AUTH=true

# JWT Configuration
# SECURITY: Generate a secure random key (at least 32 characters):
#   node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"
JWT_SECRET=<generate-your-own-secret-key>
JWT_EXPIRES_IN=7d

# Encryption key for sensitive data (SSN, bank accounts)
# SECURITY: Must be exactly 64 hex characters (32 bytes). Generate with:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=<generate-your-own-encryption-key>

# SSN Hash Salt (for duplicate detection)
# SECURITY: Separate from encryption key for defense in depth. Generate with:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SSN_HASH_SALT=<generate-your-own-salt>

# CORS - Update to your frontend URL in production
CORS_ORIGIN=http://localhost:5173

# CSRF Protection
# SECURITY: Generate a secure random key (at least 32 characters):
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CSRF_SECRET=<generate-your-own-csrf-secret>
# Set to true to disable CSRF protection (NOT recommended for production)
# DISABLE_CSRF=false

# Rate Limiting
# Set to true to disable rate limiting (for development only)
# DISABLE_RATE_LIMIT=false

# Tax Year Configuration
# Override the default tax year (uses pay date year if not set)
# Useful when processing previous year payroll or testing
# TAX_YEAR=2024
