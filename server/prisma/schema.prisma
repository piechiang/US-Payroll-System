// Prisma Schema for US Payroll System
// Database: PostgreSQL (production)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============ MODELS ============

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      String   @default("VIEWER") // ADMIN, ACCOUNTANT, MANAGER, VIEWER

  // Multi-tenant: user can access multiple companies
  companyAccess CompanyAccess[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model CompanyAccess {
  id        String   @id @default(cuid())
  userId    String
  companyId String
  role      String   @default("VIEWER")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, companyId])
  @@map("company_access")
}

model Company {
  id   String @id @default(cuid())
  name String
  ein  String @unique // Employer Identification Number (XX-XXXXXXX)

  // Address
  address String
  city    String
  state   String // 2-letter state code
  zipCode String

  // Contact
  phone String?
  email String?

  // Payroll Settings
  payFrequency String @default("BIWEEKLY") // WEEKLY, BIWEEKLY, SEMIMONTHLY, MONTHLY

  // State Tax Registrations
  stateUnemploymentId String?
  stateWithholdingId  String?

  // Employer Tax Rates
  sutaRate Decimal? // State Unemployment Tax Rate (experience rating)

  // Federal Tax Deposit Schedule (IRS Form 941)
  // MONTHLY: If tax liability < $50,000 in lookback period
  // SEMIWEEKLY: If tax liability >= $50,000 in lookback period
  federalDepositSchedule String @default("MONTHLY") // MONTHLY, SEMIWEEKLY

  // Retirement (401k) match settings
  retirement401kMatchRate         Decimal? // % of employee contribution matched
  retirement401kMatchLimitPercent Decimal? // Max employee contribution % of pay eligible for match

  isActive Boolean @default(true)

  // Relations
  employees   Employee[]
  payrolls    Payroll[]
  payPeriods  PayPeriod[]
  userAccess  CompanyAccess[]
  w2Forms     W2Form[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("companies")
}

model Employee {
  id        String @id @default(cuid())
  companyId String

  // Personal Info
  firstName   String
  lastName    String
  email       String
  ssn         String  // Encrypted: XXX-XX-XXXX
  ssnHash     String? @unique // HMAC-SHA256 hash for duplicate detection
  dateOfBirth DateTime

  // Employment
  hireDate        DateTime
  terminationDate DateTime?
  department      String?
  jobTitle        String?
  isActive        Boolean  @default(true)

  // Compensation
  payType String  // HOURLY, SALARY
  payRate Decimal // Hourly rate or annual salary

  // W-4 Information (2020+ form)
  filingStatus          String  @default("SINGLE") // SINGLE, MARRIED_FILING_JOINTLY, etc.
  allowances            Int     @default(0)  // Step 3 dependents
  additionalWithholding Decimal @default(0)  // Step 4(c)
  otherIncome           Decimal @default(0)  // Step 4(a)
  deductions            Decimal @default(0)  // Step 4(b)

  // Retirement (401k)
  retirement401kType   String?  // PERCENT or FIXED
  retirement401kRate   Decimal? // Percent of gross pay
  retirement401kAmount Decimal? // Flat amount per pay period

  // Address (for state tax purposes)
  address String
  city    String
  county  String?
  state   String // 2-letter state code
  zipCode String

  // Work location (may differ from home address)
  workState String?
  workCity  String?
  localResident Boolean @default(true)

  // Direct Deposit (encrypted in application layer)
  bankRoutingNumber String? // Encrypted with AES-256-GCM
  bankAccountNumber String? // Encrypted with AES-256-GCM
  bankAccountType   String? // CHECKING or SAVINGS (not sensitive)

  // Relations
  company  Company   @relation(fields: [companyId], references: [id])
  payrolls Payroll[]
  w2Forms  W2Form[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
  @@index([lastName, firstName])
  @@map("employees")
}

model PayPeriod {
  id        String @id @default(cuid())
  companyId String

  startDate DateTime
  endDate   DateTime
  payDate   DateTime

  // Status workflow: DRAFT -> PENDING_APPROVAL -> APPROVED -> PROCESSING -> PROCESSED -> PAID
  // Can also be: REJECTED (needs revision) or VOID (cancelled)
  status    String @default("DRAFT")

  // Approval workflow
  submittedBy   String?   // User who submitted for approval
  submittedAt   DateTime?
  approvedBy    String?   // User who approved
  approvedAt    DateTime?
  rejectedBy    String?   // User who rejected (if applicable)
  rejectedAt    DateTime?
  rejectionNote String?   // Reason for rejection

  company  Company   @relation(fields: [companyId], references: [id])
  payrolls Payroll[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId, startDate])
  @@index([status])
  @@map("pay_periods")
}

model Payroll {
  id          String @id @default(cuid())
  employeeId  String
  companyId   String
  payPeriodId String?

  // Pay Period
  payPeriodStart DateTime
  payPeriodEnd   DateTime
  payDate        DateTime

  // Hours
  regularHours  Decimal @default(0)
  overtimeHours Decimal @default(0)

  // Earnings
  regularPay  Decimal
  overtimePay Decimal @default(0)
  bonus       Decimal @default(0)
  commission  Decimal @default(0)

  // Tips
  creditCardTips  Decimal @default(0)  // Tips paid through credit card (employer distributes)
  cashTips        Decimal @default(0)  // Cash tips reported by employee (for tax withholding)

  grossPay    Decimal

  // Federal Taxes
  federalWithholding Decimal
  socialSecurity     Decimal
  medicare           Decimal

  // State Taxes (Employee)
  stateWithholding  Decimal @default(0)
  stateDisability   Decimal @default(0) // SDI
  stateUnemployment Decimal @default(0) // SUI employee portion

  // Local Taxes
  localWithholding Decimal @default(0)

  // Employer Taxes
  employerFuta         Decimal @default(0) // Federal Unemployment Tax
  employerSuta         Decimal @default(0) // State Unemployment Tax
  employerSocialSecurity Decimal @default(0) // Employer SS match
  employerMedicare     Decimal @default(0) // Employer Medicare match
  totalEmployerTax     Decimal @default(0) // Total employer taxes

  // Employer Contributions
  employer401kMatch Decimal @default(0)

  // Deductions (pre-tax)
  retirement401k  Decimal @default(0)
  healthInsurance Decimal @default(0)
  hsaContribution Decimal @default(0)

  // Deductions (post-tax)
  otherDeductions Decimal @default(0)
  garnishments    Decimal @default(0)

  // Totals
  totalDeductions Decimal
  netPay          Decimal
  reimbursements  Decimal @default(0) // Non-taxable

  // Status
  status String @default("PROCESSED")

  // YTD Totals (at time of this payroll)
  ytdGrossPay       Decimal @default(0)
  ytdFederalTax     Decimal @default(0)
  ytdSocialSecurity Decimal @default(0)
  ytdMedicare       Decimal @default(0)
  ytdStateTax       Decimal @default(0)
  ytdNetPay         Decimal @default(0)

  // Relations
  employee  Employee   @relation(fields: [employeeId], references: [id])
  company   Company    @relation(fields: [companyId], references: [id])
  payPeriod PayPeriod? @relation(fields: [payPeriodId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([employeeId, payPeriodStart, payPeriodEnd]) // Prevent duplicate payrolls for same period
  @@index([employeeId, payDate])
  @@index([companyId, payDate])
  @@map("payrolls")
}

// Audit Log for tracking sensitive data access
// Records: who accessed what, when, and from where
model AuditLog {
  id        String   @id @default(cuid())

  // Who performed the action
  userId    String?  // null for system actions
  userEmail String?  // Denormalized for quick access
  userRole  String?  // Role at time of action

  // What was accessed/modified
  action      String   // VIEW, CREATE, UPDATE, DELETE, EXPORT, LOGIN, LOGOUT
  resource    String   // EMPLOYEE, PAYROLL, COMPANY, USER, SSN, BANK_ACCOUNT
  resourceId  String?  // ID of the specific resource
  companyId   String?  // For multi-tenant filtering

  // Details
  description String?  // Human-readable description
  metadata    String?  // JSON string for additional context

  // Where (client info)
  ipAddress   String?
  userAgent   String?

  // Outcome
  success     Boolean  @default(true)
  errorMessage String?

  // When
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([resourceId])
  @@index([companyId])
  @@index([createdAt])
  @@map("audit_logs")
}

// Payroll Lock for concurrency control
// Prevents duplicate payroll runs for the same company and pay period
model PayrollLock {
  id        String   @id @default(cuid())

  // Lock identifier: companyId + payPeriodStart + payPeriodEnd
  companyId      String
  payPeriodStart DateTime
  payPeriodEnd   DateTime

  // Lock metadata
  lockedBy       String   // userId who initiated the lock
  lockedAt       DateTime @default(now())
  expiresAt      DateTime // Auto-expire stale locks (e.g., 10 minutes)

  // Status
  status         String   @default("ACTIVE") // ACTIVE, COMPLETED, EXPIRED, FAILED

  // Idempotency key for duplicate request detection
  idempotencyKey String   @unique

  @@unique([companyId, payPeriodStart, payPeriodEnd, status])
  @@index([expiresAt])
  @@map("payroll_locks")
}

// W-2 Form data for year-end tax reporting
// Stores calculated annual totals for each employee
model W2Form {
  id          String @id @default(cuid())
  employeeId  String
  companyId   String
  taxYear     Int    // e.g., 2024

  // Box a: Employee's SSN (stored encrypted, decrypted for PDF)
  // Box b: Employer's EIN (from Company)
  // Box c: Employer's name and address (from Company)
  // Box e: Employee's name
  // Box f: Employee's address

  // Box 1: Wages, tips, other compensation
  wagesTipsOther Decimal

  // Box 2: Federal income tax withheld
  federalWithholding Decimal

  // Box 3: Social Security wages
  socialSecurityWages Decimal

  // Box 4: Social Security tax withheld
  socialSecurityTax Decimal

  // Box 5: Medicare wages and tips
  medicareWages Decimal

  // Box 6: Medicare tax withheld
  medicareTax Decimal

  // Box 7: Social Security tips
  socialSecurityTips Decimal @default(0)

  // Box 8: Allocated tips
  allocatedTips Decimal @default(0)

  // Box 10: Dependent care benefits
  dependentCareBenefits Decimal @default(0)

  // Box 11: Nonqualified plans
  nonqualifiedPlans Decimal @default(0)

  // Box 12: Various codes (stored as JSON)
  // Common codes: D (401k), E (403b), W (HSA), DD (Health insurance cost)
  box12Codes String? // JSON array: [{code: "D", amount: 5000}, ...]

  // Box 13: Checkboxes
  statutoryEmployee Boolean @default(false)
  retirementPlan    Boolean @default(false)
  thirdPartySickPay Boolean @default(false)

  // Box 14: Other (employer-defined, stored as JSON)
  box14Other String? // JSON array: [{description: "Union Dues", amount: 500}, ...]

  // Boxes 15-20: State/Local information
  // Box 15: State and Employer's state ID
  stateCode           String?
  stateEmployerId     String?

  // Box 16: State wages, tips, etc.
  stateWages Decimal @default(0)

  // Box 17: State income tax
  stateWithholding Decimal @default(0)

  // Box 18: Local wages, tips, etc.
  localWages Decimal @default(0)

  // Box 19: Local income tax
  localWithholding Decimal @default(0)

  // Box 20: Locality name
  localityName String?

  // Second state (if employee worked in multiple states)
  state2Code       String?
  state2EmployerId String?
  state2Wages      Decimal @default(0)
  state2Withholding Decimal @default(0)

  // Status
  status String @default("DRAFT") // DRAFT, GENERATED, SENT, CORRECTED

  // Control number (Box d) - unique identifier for this W-2
  controlNumber String?

  // Timestamps
  generatedAt DateTime?
  sentAt      DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  employee Employee @relation(fields: [employeeId], references: [id])
  company  Company  @relation(fields: [companyId], references: [id])

  @@unique([employeeId, taxYear]) // One W-2 per employee per year
  @@index([companyId, taxYear])
  @@map("w2_forms")
}
